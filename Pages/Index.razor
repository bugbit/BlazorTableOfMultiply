@page "/"

<PageTitle>Tablas de multiplicar</PageTitle>

<h2>Tablas de multiplicar</h2>

<div class="flex-column">
    @for (var i = 1; i <= 10; i++)
    {
        var href = $"tabla/{i}";
        var text = $"Tabla del {i}";

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@href">
                <span class="oi oi-tablet" aria-hidden="true"></span> @text
            </NavLink>
        </div>
    }
</div>